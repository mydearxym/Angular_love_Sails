

<div class="container">
    <h3 class="">注册页面</h3>

    <div class="text-danger">
        <% if (errors) {%>
        <% errors.forEach(function (error) { %>
        <%= __(error) %>
        <% }) %>
        <% } %>
    </div>

    <form class="form-horizontal" role="form" action="/auth/local/register" method="post">
      <div class="form-group">
        <label for="inputUsername3" class="col-sm-2 control-label">用户名</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="inputUsername3" name="username" placeholder="Username" value="">
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">用户密码</label>
        <div class="col-sm-5">
          <input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Password" value="">
        </div>
      </div>

      <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">密码确认</label>
          <div class="col-sm-5">
              <input type="password" class="form-control" id="inputPassword3" name="passwordcomfirm" placeholder="Password" value="">
          </div>
      </div>

      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">电子邮件</label>
        <div class="col-sm-5">
          <input type="email" class="form-control" id="inputEmail3" name="email" placeholder="Email" value="">
        </div>
      </div>

      <div class="form-group">
        <label for="inputFirstName3" class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="inputFirstName3" name="firstname" placeholder="First Name" value="">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success btn-sm">注册一个</button>
            <a href="/home" class="btn btn-default btn-sm">回首页 →</a>
        </div>
      </div>

    </form>
</div>
